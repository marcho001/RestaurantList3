<div class="d-flex justify-content-center mt-3 bg-light">
  <form action="/search"
    class="rounded-pill border border-dark shadow d-flex align-items-center"
    style="width: 400px;">
    <input type="text" name="keywords" class="border-0 ml-3" style="outline: none; width: 300px;">
    <button type="submit" class="btn">
      <svg class="bi bi-search" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor"
        xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd"
          d="M10.442 10.442a1 1 0 011.415 0l3.85 3.85a1 1 0 01-1.414 1.415l-3.85-3.85a1 1 0 010-1.415z"
          clip-rule="evenodd" />
        <path fill-rule="evenodd"
          d="M6.5 12a5.5 5.5 0 100-11 5.5 5.5 0 000 11zM13 6.5a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z"
          clip-rule="evenodd" />
      </svg>
    </button>
  </form>
</div>
<div class="body-section bg-light p-2 row d-flex justify-content-center">



  {{#each list}}

  <div class="card col-sm-4 col-lg-2 m-5 pt-3 shadow" style="min-width: 320px; position: relative;">
    {{#if popular}}
    <img src="https://lh3.googleusercontent.com/proxy/rI0cSkU24tIDkDdKI0a37J2Zr1KRGPBFwYweUaYbNErzGJGReQv5sdrAkVnDudw83b6pAkcurUFc5YOzvHNDBIuhcbqzxEI-F0NzKR_S23PR" alt="image" class="rounded-circle" style="width: 80px; height: 80px; position: absolute; top: -20px; left: -25px;">
    {{/if}}
    <a href="/restaurant/{{this._id}}" class="text-dark mb-4" style="text-decoration: none;">
      <img src='{{this.image}}' class="card-img-top mt-1 rounded" alt="image" style="max-height: 210px;">
      <div class="card-body p-3">
        <p class="card-text mb-4">
          <span class="rating mr-2 p-2 rounded-pill border border-warning text-muted shadow-sm">
            <svg class="bi bi-award" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
              xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd"
                d="M9.669.864L8 0 6.331.864l-1.858.282-.842 1.68-1.337 1.32L2.6 6l-.306 1.854 1.337 1.32.842 1.68 1.858.282L8 12l1.669-.864 1.858-.282.842-1.68 1.337-1.32L13.4 6l.306-1.854-1.337-1.32-.842-1.68L9.669.864zm1.196 1.193l-1.51-.229L8 1.126l-1.355.702-1.51.229-.684 1.365-1.086 1.072L3.614 6l-.25 1.506 1.087 1.072.684 1.365 1.51.229L8 10.874l1.356-.702 1.509-.229.684-1.365 1.086-1.072L12.387 6l.248-1.506-1.086-1.072-.684-1.365z"
                clip-rule="evenodd" />
              <path d="M4 11.794V16l4-1 4 1v-4.206l-2.018.306L8 13.126 6.018 12.1 4 11.794z" />
            </svg>
            {{this.rating}}
          </span>
          <span class="rounded-pill bg-light border border-danger text-muted shadow-sm p-2">
            <svg class="bi bi-bookmarks mr-1" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
              xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd"
                d="M7 13l5 3V4a2 2 0 00-2-2H4a2 2 0 00-2 2v12l5-3zm-4 1.234l4-2.4 4 2.4V4a1 1 0 00-1-1H4a1 1 0 00-1 1v10.234z"
                clip-rule="evenodd" />
              <path d="M14 14l-1-.6V2a1 1 0 00-1-1H4.268A2 2 0 016 0h6a2 2 0 012 2v12z" />
            </svg>
            {{this.category}}
          </span>
        </p>
        <p class="card-text h5">{{this.name}}
        </p>

        <p class="card-text mt-4 mb-2">
          <svg class="bi bi-phone mr-1" width="1.2em" height="1.2em" viewBox="0 0 16 16" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              d="M11 1H5a1 1 0 00-1 1v12a1 1 0 001 1h6a1 1 0 001-1V2a1 1 0 00-1-1zM5 0a2 2 0 00-2 2v12a2 2 0 002 2h6a2 2 0 002-2V2a2 2 0 00-2-2H5z"
              clip-rule="evenodd" />
            <path fill-rule="evenodd" d="M8 14a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
          {{this.phone}}
        </p>
        <p class="card-text">
          <svg class="bi bi-map mr-1" width="1.2em" height="1.2em" viewBox="0 0 16 16" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              d="M15.817.613A.5.5 0 0116 1v13a.5.5 0 01-.402.49l-5 1a.502.502 0 01-.196 0L5.5 14.51l-4.902.98A.5.5 0 010 15V2a.5.5 0 01.402-.49l5-1a.5.5 0 01.196 0l4.902.98 4.902-.98a.5.5 0 01.415.103zM10 2.41l-4-.8v11.98l4 .8V2.41zm1 11.98l4-.8V1.61l-4 .8v11.98zm-6-.8V1.61l-4 .8v11.98l4-.8z"
              clip-rule="evenodd" />
          </svg>
          {{this.location}}
        </p>
        <p class="card-text"></p>
        <p class="card-text"></p>
      </div>
    </a>
    <div class="d-flex justify-content-end m-1 pt-3" style="position: absolute; bottom: 0; right: 0;">
      <a href="/restaurant/{{this._id}}/edit" class="edit text-dark mr-3">
        <svg class="bi bi-pen" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor"
          xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd"
            d="M5.707 13.707a1 1 0 01-.39.242l-3 1a1 1 0 01-1.266-1.265l1-3a1 1 0 01.242-.391L10.086 2.5a2 2 0 012.828 0l.586.586a2 2 0 010 2.828l-7.793 7.793zM3 11l7.793-7.793a1 1 0 011.414 0l.586.586a1 1 0 010 1.414L5 13l-3 1 1-3z"
            clip-rule="evenodd" />
          <path fill-rule="evenodd"
            d="M9.854 2.56a.5.5 0 00-.708 0L5.854 5.855a.5.5 0 01-.708-.708L8.44 1.854a1.5 1.5 0 012.122 0l.293.292a.5.5 0 01-.707.708l-.293-.293z"
            clip-rule="evenodd" />
          <path d="M13.293 1.207a1 1 0 011.414 0l.03.03a1 1 0 01.03 1.383L13.5 4 12 2.5l1.293-1.293z" />
        </svg>
      </a>
      <form action="/restaurant/{{this._id}}?_method=DELETE" method="post">
      <button type="submit" class="delete border-0" style="outline: none; cursor: pointer;">
        <svg class="bi bi-x-circle" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor"
          xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M8 15A7 7 0 108 1a7 7 0 000 14zm0 1A8 8 0 108 0a8 8 0 000 16z"
            clip-rule="evenodd" />
          <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 010 .708l-7 7a.5.5 0 01-.708-.708l7-7a.5.5 0 01.708 0z"
            clip-rule="evenodd" />
          <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 000 .708l7 7a.5.5 0 00.708-.708l-7-7a.5.5 0 00-.708 0z"
            clip-rule="evenodd" />
        </svg>
      </button>
      </form>

    </div>
  </div>
  {{/each}}
</div>